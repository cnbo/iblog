<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.developer.iblog.mapper.UserMapper" >
    <select id="selectUser" resultType="com.developer.iblog.dto.UserDTO" parameterType="com.developer.iblog.dto.UserDTO">
        <![CDATA[
  		SELECT *
  		FROM user
  		WHERE
  		username=#{username}
  		AND
  		password=#{password}
  	]]>
    </select>

    <insert id="saveUser" parameterType="com.developer.iblog.dto.UserDTO">
        INSERT INTO user(username, password) values(#{username}, #{password});
    </insert>

</mapper>